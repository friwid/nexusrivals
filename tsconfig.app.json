{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/**/src/**/*",
    "packages/**/src/*",
    "packages/client/src/**/*.vue",
    "packages/client/src/*.vue",
    "packages/client/src/routes/index.ts"
  ],
  "exclude": ["packages/**/src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/server/src/*", "./packages/client/src/*"]
    }
  }
}
